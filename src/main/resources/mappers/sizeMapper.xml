<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="SizeDAO">
	
	<insert id="insertSize">
		<![CDATA[
			insert into size (size, s_stock, color_id)
			values (#{size}, #{s_stock}, #{color_id})
		]]>
	</insert>

	<select id="getSizeList" resultType="Integer">
		<![CDATA[
			SELECT	*
			FROM	size
			WHERE	size_id = #{size_id}
		]]>
	</select>

</mapper>