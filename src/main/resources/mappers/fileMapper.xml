<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="FileDAO">
	<!-- 파일 등록 -->
	<insert id="insertFile" parameterType="file">
		<![CDATA[
			insert into file (uuid, file_o_name, file_s_name, file_path, product_id)
			values (#{uuid}, #{file_o_name}, #{file_s_name}, #{file_path}, #{product_id})
		]]>		
	</insert>

	<!-- 파일 수정 -->
	<update id="updateFile" parameterType="file">
		<![CDATA[
			update file
			set file_o_name = #{file_o_name}, file_s_name = #{file_s_name}, file_path = #{file_path}
			where uuid = #{uuid}
		]]>	
	</update>
	
	<!-- 파일 삭제 -->
	<delete id="deleteFile" parameterType="int">
		<![CDATA[
			delete from file where uuid = #{uuid}
		]]>	
	</delete>
	
	<!-- 파일 전체 리스트 -->
	<select id="fileList" resultType="file">
		<![CDATA[
			select *
			from file;
		]]>
	</select>
	
	<!-- 해당 상품에 대한 파일 리스트 -->
	<select id="getFileList" resultType="file">
		<![CDATA[
			select *
			from file
			where product_id = #{product_id}
		]]>
	</select>
	
	<!-- 메인 - New랑 BestItem, 상품들에 해당하는 파일 리스트 -->
	<select id="getProductsFileList" resultType="file">
		select *
		from file
		where product_id in 
			<foreach collection="products_id" item="id" index="index"  open="(" close=")" separator=",">
				#{id}
			</foreach>
	</select>
</mapper>